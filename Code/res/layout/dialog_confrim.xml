<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="20.0dip"
    android:layout_marginRight="20.0dip"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/titlebar_bg" >

        <TextView
            android:id="@+id/txt_confrim_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0dip"
            android:lineSpacingExtra="1.2dip"
            android:lineSpacingMultiplier="1.1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="داۋاملاشتۇرامسىز؟" >
        </TextView>
    </RelativeLayout>

  <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.0dip"
        android:src="@drawable/sc_line" />

    <TextView
        android:id="@+id/txt_confrim_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dip"
        android:layout_marginRight="2.0dip"
        android:lineSpacingExtra="1.2dip"
        android:lineSpacingMultiplier="1.1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="سىز بۇ ئۇچۇرنى ئۆچۈرەمسىز؟" >
    </TextView>

  <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.0dip"
        android:src="@drawable/sc_line" />

    <LinearLayout
        style="@style/ButtonBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rellayout_confirm_no"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.0dip"
            android:layout_marginRight="2.0dip"
            android:layout_weight="1"
            android:background="@drawable/btn_yuan"
            android:clickable="true" >

            <TextView
                android:id="@+id/txt_confrim_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:lines="1"
				android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="ياق" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rellayout_confirm_yes"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_weight="1"
            android:background="@drawable/btn_yuan"
            android:clickable="true" >

            <TextView
                android:id="@+id/txt_confrim_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:lines="1"
android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="ھەئە" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>